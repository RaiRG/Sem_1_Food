@page
@model Test.Pages.Kitchen
@{
    ViewData["Title"] = "Kitchen";
}
<div class="container">
    <div class="row block">
        @for (int i = 0; i < @Model.Dishes.Length; i++)
        {
            <div class="col-md-2 kitchen rounded border border-primary">
                <a asp-page="FoodPage" asp-route-id="@Model.Dishes[i].Id">
                    <img class="img-1 rounded-circle border border-danger" src="@Model.Dishes[i].Img">
                </a>
                <h4 class="text-center"></h4>
                <p class="over">
                    <small>@Model.Dishes[i].CookingMethod</small>
                </p>
            </div>
        }

    </div>
   
</div>